"CRIA ALV QUE LÃŠ A TABELA ZTT_APIDATA E IMPRIMI OS DADOS NA TELA.

REPORT zteste_alv.

CLASS lcl_main DEFINITION CREATE PRIVATE.
  PUBLIC SECTION.
    CLASS-METHODS create
      RETURNING
        VALUE(r_result) TYPE REF TO lcl_main.
    METHODS run.
  PROTECTED SECTION.
  PRIVATE SECTION.
ENDCLASS.


CLASS lcl_main IMPLEMENTATION.

  METHOD create.
    CREATE OBJECT r_result.
  ENDMETHOD.


  METHOD run.
    
    DATA: lo_alv TYPE REF TO   cl_salv_table,
          lt_api TYPE TABLE OF ztt_apidata.

    SELECT *
      FROM ztt_apidata
      INTO TABLE @lt_api.

    TRY.
        cl_salv_table=>factory(
          IMPORTING
            r_salv_table = lo_alv
          CHANGING
            t_table      = lt_api ).

        lo_alv->display( ).

      CATCH cx_salv_msg INTO DATA(lx_msg).
        WRITE: / 'Erro ao criar a tabela ALV:', lx_msg->get_text( ).
    ENDTRY.

  ENDMETHOD.

ENDCLASS.

START-OF-SELECTION.
  lcl_main=>create( )->run( ).
